@model IEnumerable<WebTimKiemPhongTro.Models.AccountAdmin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutShare.cshtml";
}

<h2 style="text-align:center; margin-top: 20px"><b>THÔNG TIN TÀI KHOẢN ADMIN</b></h2>
<p>
    <button type="button" class="btn btn-default" style="color: #ffffff; background: #00aecd94; box-shadow: 0 2px 5px 0 rgba(0,0,0,.16), 0 2px 10px 0 rgba(0,0,0,.12); padding: 0.5em 1em; display: inline-block; margin: 0.5em 0;">@Html.ActionLink("Tạo mới", "Create")</button>
</p>
@Styles.Render("~/Content/Giaodich.css")
<div class="container">
    <div class="container-fluid p-0">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-header pb-0">
                        <div class="card-actions float-right">
                            <div class="dropdown show">
                                <div class="dropdown-menu dropdown-menu-right">
                                    <a class="dropdown-item" href="#">Action</a>
                                    <a class="dropdown-item" href="#">Another action</a>
                                    <a class="dropdown-item" href="#">Something else here</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Email</th>
                                    <th>Họ và tên</th>
                                    <th>Username</th>
                                    <th>Số điện thoại</th>
                                    <th>Mật khẩu</th>
                                    <th>Xác nhập mật khẩu</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>@item.Email</td>
                                    <td>@item.Name</td>
                                    <td>@item.UserName</td>
                                    <td>@item.SDT</td>
                                    <td>@item.Password</td>
                                    <td>@item.Xacnhanpassword</td>
                                    <td><a class="text-danger" onclick="location.href='@Url.Action("Edit", "Admin", new { id = item.ID })'"><i class="fas fa-pencil-alt"></i>Sửa</a></td>
                                    <td><a class="text-danger" onclick="location.href='@Url.Action("Delete", "Admin", new { id = item.ID })'"><i class="far fa-trash-alt"></i> Xóa</a></td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>

