@model IEnumerable<WebTimKiemPhongTro.Models.AspNetUsers>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutShare.cshtml";
}
@Styles.Render("~/Content/thongtinuser.css")
<style>
    .small-box .icon > i.fa, .small-box .icon > i.fab, .small-box .icon > i.fad, .small-box .icon > i.fal, .small-box .icon > i.far, .small-box .icon > i.fas, .small-box .icon > i.ion {
        font-size: 70px;
        top: 20px;
    }
</style>
<div class="row">
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-info">
            <div class="inner">
                <h3>@ViewBag.Tongtindang</h3>

                <p>Đơn Hàng</p>
            </div>
            <div class="icon">
                <i class="ion ion-bag"></i>
            </div>
           
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-success">
            <div class="inner">
                <h3>@ViewBag.Tongnguoidung<sup style="font-size: 20px"> người</sup></h3>

                <p>Số Thành Viên</p>
            </div>
            <div class="icon">
                <i class="ion ion-stats-bars"></i>
            </div>
           
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-warning">
            <div class="inner">
                <h3>@ViewBag.Songuoitruycap</h3>

                <p>Số Người Truy Cập</p>
            </div>
            <div class="icon">
                <i class="ion ion-person-add"></i>
            </div>
           
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-danger">
            <div class="inner">
                <h3>@ViewBag.Songuoionline</h3>

                <p>Số Người Đang Online</p>
            </div>
            <div class="icon">
                <i class="ion ion-pie-graph"></i>
            </div>
           
        </div>
    </div>
    <!-- ./col -->
</div>
<h2 style="text-align:center; margin-top:20px"><b>TRANG QUẢN TRỊ PHÒNG TRỌ TRỰC TUYẾN</b></h2>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css" integrity="sha256-2XFplPlrFClt0bIdPgpz8H7ojnk10H69xRqd9+uTShA=" crossorigin="anonymous" />
<div class="container mt-3 mb-4">
    <div class="col-lg-12 mt-4 mt-lg-0">
        <div class="row">
            <div class="col-md-12">
                <div class="user-dashboard-info-box table-responsive mb-0 bg-white p-4 shadow-sm">
                    <table class="table manage-candidates-top mb-0">
                        <thead>
                            <tr>
                                <th>Họ và tên</th>
                                <th class="text-center">Ví tiền</th>
                                <th class="action text-right">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="candidates-list">
                                    <td class="title">
                                        <div class="thumb">
                                            <img class="img-fluid" src="~/Content/assets/img/uploadimage/@item.Image" alt="">
                                        </div>
                                        <div class="candidate-list-details">
                                            <div class="candidate-list-info">
                                                <div class="candidate-list-title">
                                                    <h5 class="mb-0"><a href="#">@item.Name</a></h5>
                                                </div>
                                                <div class="candidate-list-option">
                                                    <ul class="list-unstyled">
                                                        <li><i class="fas fa-filter pr-1"></i>@item.Email</li>
                                                        <li><i class="fa fa-phone" aria-hidden="true"></i> @item.PhoneNumber</li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="candidate-list-favourite-time text-center">
                                        <a class="candidate-list-favourite order-2 text-danger" href="#"><i class="fas fa-heart"></i></a>
                                        <span class="candidate-list-time order-1">@Html.FormatValue(@item.ViTien, "{0:#,###}") VNĐ</span>
                                    </td>
                                    <td>
                                        <ul class="list-unstyled mb-0 d-flex justify-content-end">
                                            <li><a onclick="location.href='@Url.Action("Edit", "Taikhoan", new { id = item.Id })'" class="text-info" data-toggle="tooltip" title="" data-original-title="Edit"><i class="fas fa-pencil-alt"></i></a></li>
                                            <li><a onclick="location.href='@Url.Action("Delete", "Taikhoan", new { id = item.Id })'" class="text-danger" data-toggle="tooltip" title="" data-original-title="Delete"><i class="far fa-trash-alt"></i></a></li>
                                        </ul>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



