@model WebTimKiemPhongTro.Models.Email
@{
    ViewBag.Title = "sendmail";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<div class="content-area recent-property padding-top-40" style="background-color: #FFF;">

    <div class="container">
        <div class="row">
            <nav aria-label="breadcrumb padding-top-40">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("home","Home")">Trang chủ</a></li>

                    <li class="breadcrumb-item active" aria-current="page">Liên Hệ</li>
                </ol>
            </nav>
            <div class="col-md-8 col-md-offset-2">
                <div class="" id="contact1">
                    <div class="row">
                        <div class="col-sm-4">
                            <h3><i class="fa fa-map-marker"></i> Địa Chỉ</h3>
                            <p>
                                475A Điện Biên Phủ, Phường 25, Bình Thạnh
                                <br>TThành phố Hồ Chí Minh
                                <br>10.801889340716503, 106.71443813823562
                                <br>
                                <strong>Việt Nam</strong>
                            </p>
                        </div>
                        <!-- /.col-sm-4 -->
                        <div class="col-sm-4">
                            <h3><i class="fa fa-phone"></i>Số Điện Thoại</h3>
                            <p class="text-muted">
                                Đây là số điện thoại hỗ trợ trực tiếp khách hàng,
                                nếu có thắc mắc xin vui lòng liên hệ.
                            </p>
                            <p><strong>0565397780</strong></p>
                        </div>
                        <!-- /.col-sm-4 -->
                        <div class="col-sm-4">
                            <h3><i class="fa fa-envelope"></i> Email Hỗ Trợ</h3>
                            <p class="text-muted">VUi lòng liên hệ chi tiết với địa chỉ email sau.</p>
                            <ul>
                                <li><strong><a href="mailto:">namtrung.1303@gmail.com</a></strong>   </li>

                            </ul>
                        </div>
                        <!-- /.col-sm-4 -->
                    </div>
                    <!-- /.row -->
                    <hr>
                    <div id="map">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3271.8702848106427!2d106.71167044581404!3d10.8016077973283!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x317528a459cb43ab%3A0x6c3d29d370b52a7e!2zVHLGsOG7nW5nIMSQ4bqhaSBI4buNYyBDw7RuZyBOZ2jhu4cgVFAuSENNIC0gSFVURUNI!5e0!3m2!1svi!2s!4v1629996406597!5m2!1svi!2s" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                    </div>
                    <hr>
                    <h2>Liên Hệ</h2>
                    @using (Html.BeginForm("sendmail", "Details", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="firstname">Địa chỉ email</label>
                                    <input type="text" class="form-control" name="Emails" id="firstname">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="lastname">Mật khẩu</label>
                                    <input type="text" class="form-control" name="Password" id="lastname">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="email">Gửi tới</label>
                                    <input type="text" class="form-control" name="To" id="email">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="subject">Chủ đề</label>
                                    <input type="text" class="form-control" name="Subject" id="subject">
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label for="message">Nội dung</label>
                                    <textarea id="message" name="Body" class="form-control"></textarea>
                                </div>
                            </div>
                            <div class="col-sm-12 text-center">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-envelope-o"></i> Gửi</button>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>