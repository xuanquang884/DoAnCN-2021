@model WebTimKiemPhongTro.Models.ChangePasswordViewModel
@{ ViewBag.Title = "Change Password"; }

@{
    ViewBag.Title = "ChangePassoword";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

@using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <!-- End page header -->

    <!-- property area -->
<div class="contact-section" style="background-color:darkgray;">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="login-inner-form" style="border: solid 2px;border-radius:10px;">
                    <div class="details">
                        <form>

                            <div class="profiel-header">
                                <br />
                                <h3 class="text-center">
                                    <b>THAY ĐỔI</b> MẬT KHẨU CỦA BẠN <br>
                                    <small>Bạn muốn thay đổi mật khẩu?</small>
                                </h3>
                                <hr>
                            </div>
                            <div class="form-group">
                                
                                    <label>Mật khẩu hiện tại <small>(*)</small></label>
                                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                             
                            </div>
                            <div class="form-group">
                               
                                    <label>Mật khẩu mới <small>(*)</small></label>
                                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                               
                            </div>
                            <div class="form-group">
                               
                                    <label>Xác nhận mật khẩu <small>(*)</small></label>
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                
                            </div>
                            <div class="form-group mb-0">
                                <button type="submit" class="btn-md btn-theme btn-block">Cập nhật</button>
                            </div>

                        </form>

                    </div>
                </div>
                <br />
            </div><!-- end row -->
        </div>
    </div>
</div>
            }
            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }



