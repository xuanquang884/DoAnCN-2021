@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()



        <div class="dropdown " style="padding-top:8px;">
            <a href="#" class="dropdown-toggle" data-bs-toggle="dropdown" style="">@User.Identity.GetUserName()</a>
            <div class="dropdown-menu">
                <a href="/User/ProfileUser" class="dropdown-item" style="color:black">Hồ sơ của tôi</a>
                <a href="/User/Taisancuatoi" class="dropdown-item" style="color:black">Tài sản của tôi</a>
                <a href="/Manage/ChangePassword" class="dropdown-item" style="color:black">Thay đổi mật khẩu</a>
                <a href="javascript:document.getElementById('logoutForm').submit()" class="dropdown-item" style="color:black">Thoát</a>

            </div>
        </div>

    }
}
else
{
    <ul class="top-social-media pull-right">
        <li>
            <a href="/Account/Login" class="sign-in"><i class="fa fa-sign-in"></i> Đăng nhập </a>
        </li>
        <li>
            <a href="/Account/Register" class="sign-in"><i class="fa fa-user"></i> Đăng kí</a>
        </li>
    </ul>
