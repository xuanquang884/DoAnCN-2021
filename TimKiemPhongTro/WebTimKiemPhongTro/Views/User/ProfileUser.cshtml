@model IEnumerable<WebTimKiemPhongTro.Models.AspNetUsers>

@{
    ViewBag.Title = "ProfileUser";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

@foreach (var item in Model)
{
    <!-- Sub banner start -->
    <div class="sub-banner">
        <div class="container">
            <div class="breadcrumb-area">
                <h1>Thông Tin Cá Nhân</h1>
                <ul class="breadcrumbs">
                    <li><a href="/Home/Home">Trang chủ</a></li>
                    <li class="active">Hồ sơ của tôi</li>
                </ul>
            </div>
        </div>
    </div>
    <!-- Sub banner end -->
    <!-- User page start -->
    <div class="user-page content-area-7 submit-property">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-12 col-sm-12">
                    <div class="user-profile-box mrb">
                        <!--header -->
                        <div class="header clearfix">
                            <h2>@item.Name</h2>
                            <img src="~/Content/assets/img/uploadimage/@item.Image" alt="avatar" class="img-fluid profile-img">
                        </div>
                        <!-- Detail -->
                        <div class="detail clearfix">
                            <h6><span style="font-weight:900">Mã thành viên:</span> 0323232323</h6>
                            <h6>
                                <span style="font-weight:900">Số dư:</span><span class="currency"></span> @Html.FormatValue(@item.ViTien, "{0:#,###}")&#160
                                <span>/VNĐ</span>
                            </h6>
                            <ul>
                                <li>
                                    <a href="user-profile.html" class="active">
                                        <i class="flaticon-user"></i>Thông tin cá nhân
                                    </a>
                                </li>
                                <li>
                                    <a href="my-properties.html">
                                        <i class="flaticon-house"></i>Quản lý tin đăng
                                    </a>
                                </li>

                                <li>
                                    <a href="submit-property.html">
                                        <i class="flaticon-add"></i>Đăng tin mới
                                    </a>
                                </li>
                                <li>
                                    <a href="change-password.html">
                                        <i class="flaticon-locked-padlock"></i>Đổi mật khẩu
                                    </a>
                                </li>
                                <li>
                                    <a href="index.html">
                                        <i class="flaticon-logout"></i>Thoát
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8 col-md-12 col-sm-12">
                    <div class="my-address contact-2">
                        <h3 class="heading-3">Thông tin cá nhân</h3>
                        <form action="#" method="GET" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-lg-12 ">
                                    <div class="form-group name">
                                        <label>Họ và tên</label>
                                        <input readonly type="text" name="name" class="form-control" value="@item.Name">
                                    </div>
                                </div>
                                <div class="col-lg-12 ">
                                    <div class="form-group name">
                                        <label>Email</label>
                                        <input readonly type="text" name="name" class="form-control" value="@item.Email">
                                    </div>
                                </div>
                                <div class="col-lg-12 ">
                                    <div class="form-group name">
                                        <label>Tên Người dùng :</label>
                                        <input readonly type="text" name="name" class="form-control" value="@item.UserName">
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group email">
                                        <label>Facebook :</label>
                                        <input readonly type="text" name="title" class="form-control" value="@item.Facebook">
                                    </div>
                                </div>
                                <div class="col-lg-12 ">
                                    <div class="form-group subject">
                                        <label>Phone :</label>
                                        <input readonly type="text" name="phone" class="form-control" value="@item.PhoneNumber">
                                    </div>
                                </div>
                                <div class="col-lg-12 ">
                                    <div class="form-group number">
                                        <label>Zalo :</label>
                                        <input readonly type="email" name="email" class="form-control" value="@item.Zalo">
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="send-btn">
                                        <button type="submit" class="btn btn-color btn-md btn-message">@Html.ActionLink("THAY ĐỔI ", "EditProfile", new { id = item.Id })</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- User page end -->


}




