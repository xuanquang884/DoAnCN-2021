@model WebTimKiemPhongTro.Models.AspNetUsers

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutShare.cshtml";
}


<h2 style="text-align:center; margin-top: 20px"><b>CHỈNH SỬA THÔNG TIN TÀI KHOẢN</b></h2>
