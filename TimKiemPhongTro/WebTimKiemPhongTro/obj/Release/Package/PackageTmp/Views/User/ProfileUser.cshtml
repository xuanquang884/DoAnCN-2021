@model IEnumerable<WebTimKiemPhongTro.Models.AspNetUsers>

@{
    ViewBag.Title = "ProfileUser";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}@Styles.Render("~/Content/price.css")
@foreach (var item in Model)
{
    <div class="page-head">
        <div class="container">
            <div class="row">
                <div class="page-head-content">
                    <h1 class="page-title">XIN CHÀO : <span class="orange strong">@item.Name</span></h1>
                </div>
            </div>
        </div>
    </div>
    <!-- End page header -->
    <!-- property area -->
    <div class="content-area user-profiel" style="background-color: #FCFCFC;">
        &nbsp;
        <div class="container">
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1 profiel-container">

                    <form action="" method="">
                        <div class="profiel-header">
                            <h3>
                                <b>THÔNG TIN CÁ NHÂN</b> <br>
                            </h3>
                            <hr>
                        </div>

                        <div class="clear">
                            <div class="col-sm-3 col-sm-offset-1">
                                <div class="picture-container">
                                    @*@{ var image = item.Image.Split(',');}*@
                                    <div class="picture">
                                        <img src="~/Content/assets/img/uploadimage/@item.Image" class="picture-src" id="wizardPicturePreview" title="" />
                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-3 padding-top-25">
                                <div class="form-group">
                                    <label>Họ và tên:</label><br>
                                    <label name="hovaten" type="text" class="form-control" style="padding-top: 10px; padding-bottom:10px;; color: black">@item.Name</label>
                                </div>
                                <div class="form-group">
                                    <label>Email: </label>
                                    <label name="email" type="text" class="form-control" style="padding-top: 10px; padding-bottom:10px;; color: black">@item.Email</label>
                                </div>
                                <div class="form-group">
                                    <label>UserName: </label>
                                    <label name="username" type="text" class="form-control" style="padding-top: 10px; padding-bottom:10px;; color: black">@item.UserName</label>
                                </div>
                            </div>
                            <div class="col-sm-4 padding-top-25">
                                <div class="container">
                                    <h4 class="py-3 text-center">Ví tiền</h4>
                                    <div class="row">
                                        <div class="col-md-4 col-sm-6">
                                            <div class="pricingTable10">
                                                <div class="pricingTable-header">
                                                    <h3 class="heading">Tài khoản</h3>
                                                    <span class="price-value">
                                                        <span class="currency"></span> @Html.FormatValue(@item.ViTien, "{0:#,###}")&#160
                                                        <span class="month">     /VNĐ</span>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>

                        <div class="clear">
                            <br>
                            <hr>
                            <br>
                            <div class="col-sm-5 col-sm-offset-1">
                                <div class="form-group">
                                    <label>Facebook :</label>
                                    <label name="firstname" type="text" class="form-control" style="padding-top: 10px; padding-bottom:10px;; color: black">@item.Facebook</label>
                                </div>
                                <div class="form-group">
                                    <label>Twitter :</label>
                                    <label name="firstname" type="text" class="form-control" style="padding-top: 10px; padding-bottom:10px;; color: black">@item.Twitter</label>
                                </div>
                                <div class="form-group">
                                    <label>Website :</label>
                                    <label name="firstname" type="text" class="form-control" style="padding-top: 10px; padding-bottom:10px;; color: black">@item.Website</label>
                                </div>
                            </div>

                            <div class="col-sm-5">
                                <div class="form-group">
                                    <label>Phone :</label>
                                    <label name="firstname" type="text" class="form-control" style="padding-top: 10px; padding-bottom:10px;; color: black">@item.PhoneNumber</label>
                                </div>
                                <div class="form-group">
                                    <label>FAX :</label>
                                    <label name="firstname" type="text" class="form-control" style="padding-top: 10px; padding-bottom:10px;; color: black">@item.Fax</label>
                                </div>
                            </div>

                        </div>

                        <div class="col-sm-5 col-sm-offset-1">
                            <br>
                            <button style="color:#FFF; background-color: #FDC600; border-color: #FDC600; border-radius: 1px; padding: 10px 20px; font-weight: 600;">@Html.ActionLink("THAY ĐỔI ", "EditProfile", new { id = item.Id })</button>
                        </div>
                        <br>
                    </form>

                </div>
            </div>

        </div>
    </div>
}




